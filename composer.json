{
    "name": "tracesoftware/elephant-guard",
    "type": "library",
    "description": "PSR-7 and PSR-15 HTTP compliant middleware",
    "keywords": ["middleware", "auth", "psr-7", "psr-15"],
    "license": "GPL-3.0",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Matthieu Vion"
        }
    ],
    "require": {
        "php": "^7.1",
        "http-interop/http-factory": "^0.3.0",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "tuupola/callable-handler": "^0.3.0",
        "tuupola/http-factory": "^0.3.0",
        "webmozart/glob": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "TraceSoftware\\Middleware\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TraceSoftware\\Middleware\\ElephantGuard\\": "tests",
            "Test\\": "tests/lib"
        }
    },
    "require-dev": {
        "codedungeon/phpunit-result-printer": "^0.6.0",
        "equip/dispatch": "^2.0",
        "overtrue/phplint": "^0.2.4",
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^3.2",
        "zendframework/zend-diactoros": "^1.3"
    },
    "scripts": {
        "lint": ["@lint:phplint", "@lint:phpcs"],
        "lint:phplint": "phplint . --exclude=vendor/",
        "lint:phpcs": "phpcs -p --standard=PSR2 --extensions=php --encoding=utf-8 --ignore=*/vendor/*,*/benchmarks/* .",

        "test": "phpunit --coverage-text"
    },
    "config": {
        "classmap-authoritative" : true,
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
